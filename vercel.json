{
  "rewrites": [
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "blog.esubalew.et"
        }
      ],
      "destination": "/blog"
    },
    {
      "source": "/(?!blog)(.*)",
      "has": [
        {
          "type": "host", 
          "value": "blog.esubalew.et"
        }
      ],
      "destination": "/blog/$1"
    }
  ],
  "redirects": [
    {
      "source": "/blog",
      "has": [
        {
          "type": "host",
          "value": "esubalew.et"
        }
      ],
      "destination": "https://blog.esubalew.et",
      "permanent": true
    },
    {
      "source": "/blog/(.*)",
      "has": [
        {
          "type": "host",
          "value": "esubalew.et"
        }
      ],
      "destination": "https://blog.esubalew.et/$1",
      "permanent": true
    }
  ]
}
