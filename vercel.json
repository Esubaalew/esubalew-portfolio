{
  "redirects": [
    {
      "source": "/blog",
      "destination": "https://blog.esubalew.et/blog",
      "permanent": true
    },
    {
      "source": "/blog/(.*)",
      "destination": "https://blog.esubalew.et/blog/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "blog.esubalew.et"
        }
      ],
      "destination": "/blog"
    },
    {
      "source": "/((?!blog).*)",
      "has": [
        {
          "type": "host", 
          "value": "blog.esubalew.et"
        }
      ],
      "destination": "/blog/$1"
    }
  ]
}
